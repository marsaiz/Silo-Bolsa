<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaBienvenida">

    <RelativeLayout
        android:id="@+id/pag_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:text="@string/bienvenidos_a_la_aplicaci_n_de_silo_bolsa"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ingresar"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="108dp"
            android:autoText="false"
            android:backgroundTint="#4A95C3"
            android:text="Ingresar"
            android:textColor="#F6F6F6"
            android:textSize="20sp"
            tools:ignore="VisualLintButtonSize,VisualLintOverlap" />

        <ImageView
            android:id="@+id/fullscreenImageView"
            android:layout_width="386dp"
            android:layout_height="520dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="51dp"
            android:backgroundTint="#2DFFFFFF"
            app:srcCompat="@drawable/bandera" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>