{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "rootDirectory": "Codigo",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "watchPatterns": [
      "Codigo/Dockerfile",
      "Codigo/Web/SiloBolsa.Api/**",
      "Codigo/Web/SiloBolsa.Api/wwwroot/**",
      "Codigo/Web/SiloBolsa.Api/Program.cs",
      "Codigo/railway.json"
    ]
  }
}
